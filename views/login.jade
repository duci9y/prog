extends layout

block content
	.row
		.col-xs-12.col-sm-8.col-sm-offset-2.col-md-4.col-md-offset-4
			.login-form
				form.form-horizontal(action='/login', method='POST')
					.form-group
						.col-xs-12
							input.form-control(name='username', type='text', autocomplete='off', autocorrect='off', autocapitalize='off', spellcheck='false', placeholder='Username', autofocus)
					.form-group
						.col-xs-12
							input.form-control(name='password', type='password', placeholder='Password')
					.form-group
						.col-xs-12
							button.btn.btn-custom(type='submit') Login
				if !!error
					.alert.alert-danger
						strong Error: 
						= error.message
